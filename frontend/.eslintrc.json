{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        // "@typescript-eslint",
        "react"
    ],
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            2
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": [
            "error",
            { 
                "varsIgnorePattern": "^_"
            }
        ]
    }
}
